<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dialog_back"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/dialog_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivCrossCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:layout_marginEnd="@dimen/_24sdp"
        app:layout_constraintEnd_toEndOf="@id/dialog_back"
        app:layout_constraintTop_toTopOf="@id/dialog_back"
        app:srcCompat="@drawable/ic_cancel" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/img_success"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/ic_welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Welcome"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_success" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:gravity="center"
        android:padding="@dimen/_25sdp"
        android:text="Hi! I'm the developer this app.I'm very thankful to you all. You are my first users. I'm very happy to develop this app for you. I'm a student. I develop this app to earn some money. I know this app is not perfect. I'm working hard to make this app perfect so that you don't face any problem. Keep using my app and also download my other apps which I have pasted the link in setting. Again Thanks a lot you to all."
        android:textColor="@color/text_color"
        android:textSize="@dimen/_10ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_main_title" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_clear"
        android:layout_width="@dimen/_70sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/bg_button"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Ok"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:cornerRadius="@dimen/_15sdp"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />


    <FrameLayout
        android:id="@+id/nativeViewInvalid"
        layout="@layout/native_ad_banner_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        app:layout_constraintBottom_toBottomOf="@id/dialog_back"
        app:layout_constraintEnd_toEndOf="@id/dialog_back"
        app:layout_constraintStart_toStartOf="@id/dialog_back"
        app:layout_constraintTop_toBottomOf="@id/btn_clear" />
</androidx.constraintlayout.widget.ConstraintLayout>
